{
	"compilerOptions": {
		"baseUrl": "./src",
		"charset": "utf8",
		"experimentalDecorators": true,
		"lib": [
			"esnext"
		],
		"moduleResolution": "node",
		"newLine": "lf",
		"paths": {
			"~/*": [
				"*"
			]
		},
		"skipLibCheck": true,
		"strict": true,
		"types": [],
		"target": "esnext",
	},
	"include": [
		"./src/**/*"
	]
}
