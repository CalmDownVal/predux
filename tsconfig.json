{
	"compilerOptions": {
		"baseUrl": "src/",
		"charset": "utf8",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"jsxFactory": "h",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "lf",
		"outDir": "dist/",
		"strict": true,
		"target": "esnext"
	},
	"include": [
		"src/**/*"
	]
}
