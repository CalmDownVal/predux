{
	"root": true,
	"extends": [
		"@calmdownval/eslint-config",
		"@calmdownval/eslint-config/typescript"
	],
	"env": {
		"browser": true
	},
	"parserOptions": {
		"project": "./packages/**/tsconfig.json"
	},
	"settings": {
		"import/resolver": {
			"typescript": {
				"project": "./packages/**/tsconfig.json"
			}
		}
	},

	// TODO: update these in @calmdownval/eslint-config
	"rules": {
		"@typescript-eslint/method-signature-style": "off", // annoying and the meanings are not the same anyway
		"multiline-comment-style": "off", // very, very annoying
		"func-style": "off", // nested functions should not be declarations and make sense to use due to `arguments`
		"spaced-comment": [
			"warn",
			"always",
			{
				"line": {
					"markers": [ "/", "#region", "#endregion" ]
				},
				"block": {
					"markers": [ "*" ],
					"balanced": true
				}
			}
		],
		"semi-spacing": [
			"warn",
			{
				"before": false,
				"after": true // for cycles
			}
		],
		"prefer-const": [
			"warn",
			{
				"destructuring": "all",
				"ignoreReadBeforeAssign": true
			}
		]
	}
}
